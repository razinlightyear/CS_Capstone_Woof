<div class="card" style="display: none;" id="event_invite_card">
  <div class="card-header">
    <strong>Person to invite</strong>
  </div>
  <div class="card-block">
    <div class="row">
      <%= form_for invite, remote: true, html: { class: "form-inline", style: "width: 100%;" } do |f| %>
      <div class="col-10">
        <div class="form-group <%= has_error?(invite, :invitee) ? "has-danger" : "" %>" style="width: 70%;">
          <%= f.collection_select :invitee_id, (invite.invitee ? [invite.invitee] : []), :id, :name, { include_blank: true }, { class: "form-control event-invitee-selector", style: "width: 100%;", data: {'event-id' => event.id} } %>
          <%= form_feedback(invite, :invitee).html_safe %>
        </div>
      </div>
      <div class="col-2" style='position: relative;'>
        <%= f.hidden_field :event_id, value: event.id %>
        <div class="form-group">
          <%= f.submit nil, class: "btn btn-info btn-sm float-right", style: "position: absolute; top: 50%; right: 0%; transform: translate(-20%, -50%);" %>
        </div>
      </div>
      <% end %> <!-- end of form -->
    </div>
  </div>
</div>
