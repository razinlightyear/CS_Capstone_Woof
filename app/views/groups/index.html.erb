<h1>Groups</h1>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th> Group Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td><%= link_to 'Group Chat', chat_group_path(group) , class: "btn btn-outline-info" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2"></div>
</div>
<br>
