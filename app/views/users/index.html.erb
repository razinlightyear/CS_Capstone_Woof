<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <h1>Users</h1>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Belongs to Groups</th>
          <th>Owns Groups</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
          <% user.groups.each do |group| %>
            <%= link_to group.name, group %>
            </br>
          <% end %>
          </td>
          <td>
          <% user.owns_groups.each do |group| %>
            <%= link_to group.name, group %>
            </br>
          <% end %>
          </td>
          <td><%= link_to 'Around Me Events', event_path(user.id), class: "btn btn-outline-success btn-sm" %></td>
          <td><%= link_to 'Profile', profile_users_path(user.id), class: "btn btn-outline-primary btn-sm" %></td>
          <td>
            <%= link_to 'Show', user, class: "btn btn-outline-info btn-sm" %>
            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-secondary btn-sm" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
  </div>
  <div class="col-md-1"></div>
</div>
