<div class='container' id='user_update_password'>
  <h3 style="color: #585858; text-align: center;">Update Your Password</h3>
  <%= form_for(@user, :url => { :action => "update_password" }, method: 'patch' ) do |f| %>
  <div class='containter'>
    <div class="form-group">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, class: "form-control", style: 'width: 50%;' %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Password" %><br />
      <%= f.password_field :password, :autocomplete => "off", class: "form-control", style: 'width: 50%;'  %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: "form-control", style: 'width: 50%;' %>
    </div>
    <div class="form-actions">
      <%= f.submit 'Change Password', class: "btn btn-primary float-right", style: 'margin-top: 10px', data: {disable_with: 'Changing...'} %>
    </div>
        </div>
  <% end %>
</div>
