<div class="card">
  <div class="card-header" role="tab" id="heading_group_<%=group.id%>_user_<%=user.id%>">
    <h5 class="mb-0">
      <img class="rounded-circle" src="//placehold.it/50x50" alt="Card image">
      <a class="collapsed" data-toggle="collapse" data-parent="#user_accordion_group_<%=group.id%>" href="#collapse_group_<%=group.id%>_user_<%=user.id%>" aria-expanded="false" aria-controls="collapse_group_<%=group.id%>_user_<%=user.id%>">
        <%=user.first_name%>
      </a>
    </h5>
  </div>
  
  <div id="collapse_group_<%=group.id%>_user_<%=user.id%>" class="collapse<%= j == 0 ? ' show' : '' %>" role="tabpanel" aria-labelledby="heading_group_<%=group.id%>_user_<%=user.id%>">
    <div class="card-block">
      <%= render 'users/show_card', group: group, user: user %>
      <%= render 'users/form_card', group: group, user: user %>
    </div>
  </div>
</div>