<%= form_tag({controller: "events", action: "filter_events"}, method: "post", "data-remote": true) do %>
    <div class = "form-check">
        <label class= "form-check-label">
            <input class = "form-check-input" type = "checkbox" name = "filter_events[]" id = "filter_lost" value = "LostDog">
            Lost Dog
        </label>
    </div>

    <div class = "form-check">
        <label class= "form-check-label">
            <input class = "form-check-input" type = "checkbox" name = "filter_events[]" id = "filter_found" value = "FoundDog">
            Found Dog
        </label>
    </div>

    <div class = "form-check">
        <label class= "form-check-label">
            <input class = "form-check-input" type = "checkbox" name = "filter_events[]" id = "filter_all" value = "All">
            All Events
        </label>
    </div>

    <div class = "form-check">
        <label class= "form-check-label">
            <input class = "form-check-input" type = "checkbox" name = "filter_events[]" id = "filter_personal" value = "Personal" onchange="disable_filters();">
            My Posted Events
        </label>
    </div>    

    <%= submit_tag("Filter the events", class: "btn btn-primary") %>

<% end %>

<%= link_to 'Post a Lost Dog Event', lost_dogs_new_path, class: 'btn btn-primary',data: {:remote => true, 'data-toggle' => 'modal', 'data-target'=>'#eventModal'} %>

<%= link_to 'Post a Found Dog Event', found_dogs_new_path, class: 'btn btn-primary',data: {:remote => true, 'data-toggle' => 'modal', 'data-target'=>'#eventModal'} %>

<%= link_to 'Post any Around Me event', post_events_new_path, class: 'btn btn-primary',data: {:remote => true, 'data-toggle' => 'modal', 'data-target'=>'#eventModal'} %>
