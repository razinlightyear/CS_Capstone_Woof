<div style='overflow: scroll;'>
  <% unless pet.image.url.nil? %>
    <%= image_tag pet.image.url, class: 'rounded mx-auto d-block', style: 'margin: 20px 0px;' %>
  <% else %>
    <%= image_tag 'pet_placeholder', class: "rounded mx-auto d-block", width: 500, height: 500, alt: 'Card image' %>
  <% end %>
  <% unless view_only %>
    <div style='padding-top: 10px;' align='center'>
      <%= form_for pet, html: { id: "pet_image_form" } do |f| %>
        <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
        <!-- <%= f.label :image, class: 'btn btn-outline-primary btn-sm' do %>
          Change Image
          <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg', hidden: true %>
        <% end %> -->
        <!-- <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg,image/jpg', class: 'float-left' %> -->
        <!-- <%= f.file_field :image, data: {pet_id: pet.id}, accept: 'image/png,image/gif,image/jpeg,image/jpg' %> -->
        <%= f.hidden_field :image_cache %>
        <%= f.submit "Save", data: { disable_with: "Saving..." }, :class => 'btn btn-info float-right', style: 'margin-top: 10px; margin-bottom: 20px;' %>
      <% end %>
    </div>
  <% end %>
</div>
